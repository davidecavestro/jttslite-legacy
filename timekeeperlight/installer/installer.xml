<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<!-- File di configurazione dell'installer izPack -->
<installation version="1.0">

   <!-- Informazioni sul pacchetto di installazione -->
   <info>
	  <appname>@{external.name}</appname>
	  <appversion>@{major.version.number}.@{minor.version.number}@{version.suffix}</appversion>
	  <authors>
		 <author email="d.cavestro@libero.it" name="Davide Cavestro (project founder)" />
		 <author email="capitanfuturo@users.sourceforge.net" name="Giuseppe Caliendo aka capitanfuturo" />
	  </authors>
	  <url>http://jttslite.sourceforge.net/</url>
	  <javaversion>1.6</javaversion>
	  <requiresjdk>no</requiresjdk>
	  <run-privileged condition="izpack.windowsinstall.vista|izpack.macinstall" />
	  <summarylogfilepath>$INSTALL_PATH/installinfo/Summary.htm</summarylogfilepath>
   </info>

   <!-- Imposto il colore dell'heading personalizzato e un'icona per l'installatore -->
   <guiprefs width="600" height="480" resizable="no">
	  <modifier key="useHeadingPanel" value="yes" />
	  <modifier key="useHeadingForSummary" value="yes" />
	  <modifier key="headingImageOnLeft" value="yes" />
	  <modifier key="headingLineCount" value="2" />
	  <modifier key="headingFontSize" value="1.5" />
	  <modifier key="headingBackgroundColor" value="0xf09f3e" />
	  <modifier key="headingPanelCounter" value="text" />
	  <modifier key="headingPanelCounterPos" value="inHeading" />
   </guiprefs>

   <locale>
	  <langpack iso3="deu" />
	  <langpack iso3="eng" />
	  <langpack iso3="fra" />
	  <langpack iso3="ita" />
	  <langpack iso3="jpn" />
	  <langpack iso3="por" />
	  <langpack iso3="rus" />
	  <langpack iso3="spa" />
   </locale>

   <!-- Need to define ant properties we want to use during install as variables -->
   <variables>
	  <variable name="external.name" value="@{external.name}"/>
	  <variable name="major.version.number" value="@{major.version.number}"/>
	  <variable name="minor.version.number" value="@{minor.version.number}"/>
	  <variable name="version.suffix" value="@{version.suffix}"/>
	  <variable name="basedir" value="@{basedir}" />
   </variables>

   <resources>
	  <res id="HTMLInfoPanel.info" src="@{basedir}/../deploy/license-contents/license/license.html" />
	  <res id="Heading.image" src="@{basedir}/../deploy/icons/jtts128x128.png" />
	  <res id="shortcutSpec.xml" src="@{basedir}/shortcutSpec.xml" />
	  <res id="Unix_shortcutSpec.xml" src="@{basedir}/Unix_shortcutSpec.xml" />
   </resources>

   <panels>
	  <panel classname="HelloPanel" />
	  <panel classname="HTMLInfoPanel" />
	  <panel classname="TargetPanel" />
	  <panel classname="SummaryPanel" />
	  <panel classname="InstallPanel" />
	  <panel classname="ShortcutPanel"/>
	  <panel classname="SimpleFinishPanel" />
   </panels>

   <!-- Pacchetti da installare -->
   <packs>
	  <!-- Il core del programma -->
	  <pack name="Core application" required="yes" installGroups="Required" >
		 <description>JTTS core application</description>
		 <file src="@{basedir}/../dist/timekeeperlight.jar" targetdir="$INSTALL_PATH"/>
		 <fileset dir="@{basedir}/../deploy/license-contents/license/" targetdir="$INSTALL_PATH/license">
			<include name="*"/>
		 </fileset>
		 <file src="@{basedir}/../deploy/other-info/ReleaseNotes.txt" targetdir="$INSTALL_PATH/other-info"/>
	  </pack>
	  <!-- Le librerie necessarie per l'installazione -->
	  <pack name="Libraries" required="yes" installGroups="Required" >
		 <description>JTTS Lite libraries set</description>
		 <file src="@{basedir}/../dist/lib" targetdir="$INSTALL_PATH"/>
	  </pack>
	  <!-- La documentazione TODO aggiungere la condizione per lingua-->
	  <pack name="Documentation" required="yes" installGroups="Required">
		 <description>Documentation</description>
		 <fileset dir="@{basedir}/../deploy/help/help-contents/default/html/" targetdir="$INSTALL_PATH/help">
			<include name="*"/>
			<include name="**" />
		 </fileset>
	  </pack>
	  <!-- Le icone esterne per gli shortcut -->
	  <pack name="Icons for desktop" required="yes" installGroups="Required" >
		 <description>Icons for desktop shortcuts</description>
		 <fileset dir="@{basedir}/../deploy/icons/" targetdir="$INSTALL_PATH/icons">
			<include name="*"/>
		 </fileset>
	  </pack>
   </packs>
</installation>